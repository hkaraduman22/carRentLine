// backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  name         String
  surname      String
  role         String        @default("user")
  password     String
  createdAt    DateTime      @default(now())

  reservations Reservation[]
  messages     Message[]     // ✅ Mesaj ilişkisi eklendi
}

model Car {
  id           Int           @id @default(autoincrement())
  brand        String
  model        String
  km           Int
  pricePerDay  Decimal
  year         Int
  isAvailable  Boolean       @default(true)
  imageUrl     String?
  
  features     Feature[]
  reservations Reservation[]
  messages     Message[]     // ✅ Mesaj ilişkisi eklendi
}

model Feature {
  id    Int    @id @default(autoincrement())
  name  String @unique
  cars  Car[]
}

model Reservation {
  id         Int      @id @default(autoincrement())
  startDate  DateTime
  endDate    DateTime
  totalPrice Decimal
  createdAt  DateTime @default(now())
   
  status     String   @default("PENDING") 

  userId     Int
  user       User     @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  carId      Int
  car        Car      @relation(fields: [carId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}
 
model Message {
  id        Int      @id @default(autoincrement())
  content   String
  reply     String?  // <-- YENİ: Admin cevabı (boş olabilir)
  createdAt DateTime @default(now())

  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  carId     Int
  car       Car      @relation(fields: [carId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}