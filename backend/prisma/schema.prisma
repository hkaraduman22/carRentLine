// backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js" // Düzeltme: Tırnak içine alındı
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL") // <--- BU SATIR EKLENMELİ, YOKSA HATA VERİR
 
}

// 1. Tablo: Kullanıcı (User)
model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  name         String        // Düzeltme: 'String' büyük harfle
  surname      String
  role         String        @default("user")
  password     String        // Düzeltme: 'String' büyük harfle
  createdAt    DateTime      @default(now())
  
  reservations Reservation[] 
}

// 2. Tablo: Araba (Car)
model Car {
  id           Int           @id @default(autoincrement())
  brand        String        // Düzeltme: 'String' büyük harfle
  model        String
  km           Int           // Düzeltme: 'Int' büyük harfle
  pricePerDay  Decimal
  year         Int
  
  // İsteğe bağlı alanları ekledim (önceki konuşmamızda vardı)
  isAvailable  Boolean       @default(true) 
  imageUrl     String?       

  features     Feature[]
  reservations Reservation[] // Düzeltme: Bu ilişki satırı eksikti, eklendi.
}

// 3. Tablo: Özellik (Feature)
model Feature {
  id    Int    @id @default(autoincrement()) // Düzeltme: @autoincrement() başındaki @ kalktı
  name  String @unique // Düzeltme: @string değil String

  cars  Car[]
}

// 4. Tablo: Rezervasyon (Reservation)
model Reservation {
  id         Int      @id @default(autoincrement())
  startDate  DateTime
  endDate    DateTime
  totalPrice Decimal
   
  createdAt  DateTime @default(now())

  userId     Int      // Düzeltme: 'Int' büyük harfle
  user       User     @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  carId      Int
  car        Car      @relation(fields: [carId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}
